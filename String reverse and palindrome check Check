import java.util.*;

class ReversePalindromeString{
    
    public static void main(String [] args){
        
        String original,reverse="";
        Scanner sc=new Scanner(System.in);
        
        System.out.print("Enter string/Number: ");  
     
       original=sc.next();
        
        
        for(int i=original.length()-1;i>=0;i--){ // For loop for reverse string
            reverse=reverse+original.charAt(i);
        }
        
    System.out.print("Enter 1 to check Palindrome or Enter 2 to Reverse String ");
        int n=sc.nextInt();
    switch(n)
    {
        case 2:
        System.out.println("Reverse of String/Number: "+reverse); // Reverse String output
        break;
        case 1:
        
         if (original.equals(reverse))  
         System.out.println("Entered string/number is a palindrome.");  
         else  
         System.out.println("Entered string/number isn't a palindrome.");  
         break;
    }
    }
}
